{
  "extends": ["eslint:recommended", "prettier"],
  "root": true,
  "overrides": [
    {
      "files": ["server/**/*.js"],
      "env": {
        "node": true,
        "es2022": true
      },
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      }
    },
    {
      "files": ["client/**/*.{js,jsx}"],
      "env": {
        "browser": true
      },
      "extends": ["plugin:react/recommended", "plugin:react-hooks/recommended"],
      "settings": {
        "react": {
          "version": "detect"
        }
      }
    }
  ]
}
