            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"jobId\": \"{{jobId}}\"\n}"
            },
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "var jsonData = pm.response.json();",
                    "if (jsonData.data && jsonData.data._id) {",
                    "    pm.collectionVariables.set(\"appId\", jsonData.data._id);",
                    "}"
                  ],
                  "type": "text/javascript"
                }
              }
            ]
          }
        },
        {
          "name": "List My Applications",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/applications?page=1&limit=10"
          }
        },
        {
          "name": "Get Application by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/applications/{{appId}}"
          }
        },
        {
          "name": "Delete Draft Application",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/applications/{{appId}}",
            "description": "Only allowed on draft applications."
          }
        }
      ]
    },
